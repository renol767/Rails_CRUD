<html>
  <head>
    <title>Edit Data</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-8 col-md-6"></div><br/>
        <h1>Edit Data</h1><br/>
        <%= link_to 'kembali', crud_index_path, :class => "btn btn-danger"%>
        <br><br>
        <%= form_with model: @get_id, url: crud_update_path do |f| %>
          <div class="mb-3">
            <label class="form-label" for="exampleInputEmail1">Name</label>
            <div class="mr-10"></div>
            <%= f.text_field :name, placeholder: 'Name', :class => 'form-control' %>
          </div><br/>
          <div class="mb-3">
            <label class="form-label" for="exampleInputEmail1">Email</label>
            <div class="mr-10"></div>
            <%= f.text_field :email, placeholder: 'Email', :class => 'form-control' %>
          </div><br/>
          <div class="mb-3">
            <label class="form-label" for="exampleInputEmail1">Address</label>
            <div class="mr-10"></div>
            <%= f.text_field :address, placeholder: 'Address / Alamat', :class => 'form-control' %>
          </div><br/>
          <div class="mb-3">
            <label class="form-label" for="exampleInputEmail1">Status</label>
            <div class="mr-10"></div>
            <%= f.select :status, [['Selesai', true], ['Belum Selesai', false]], {}, { :class => 'form-control' } %>
          </div><br/>
          <br/>
          <%= f.submit 'Update', :class => 'btn btn-primary' %>
        <% end %>
        <div class="col-8 col-md-6"></div>
      </div>
    </div>
  </body>
</html>